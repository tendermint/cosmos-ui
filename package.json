{
  "name": "@tendermint/ui",
  "productName": "Tendermint UI",
  "description": "Tendermint UI contains components for front end projects.",
  "version": "0.2.12",
  "license": "Apache-2.0",
  "author": "Tendermint, Inc <hello@tendermint.com>",
  "main": "src/index.js",
  "scripts": {
    "lint": "vue-cli-service lint",
    "test": "vue-cli-service test:unit"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "cookieconsent": "^3.0.6",
    "js-base64": "^2.4.5",
    "markdown-it": "^8.4.1",
    "markdown-it-anchor": "^5.0.2",
    "moment": "^2.22.1",
    "moment-timezone": "0.5.16",
    "numeral": "^2.0.6",
    "perfect-scrollbar": "^1.4.0",
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-rc.1",
    "@vue/cli-plugin-eslint": "^3.0.0-rc.1",
    "@vue/cli-plugin-unit-jest": "^3.0.0-rc.1",
    "@vue/cli-service": "^3.0.0-rc.1",
    "@vue/eslint-config-prettier": "^3.0.0-beta.16",
    "@vue/test-utils": "^1.0.0-beta.16",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "html-beautify": "^1.0.4",
    "lint-staged": "^6.0.0",
    "pug": "^2.0.3",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-template-compiler": "^2.5.16",
    "yorkie": "^1.0.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      ".+\\.jsx?$": "babel-jest",
      ".+\\.vue$": "vue-jest",
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ],
    "testMatch": [
      "<rootDir>/(tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx))"
    ],
    "setupFiles": [
      "./tests/unit/helpers/fixed_time.js"
    ]
  },
  "gitHooks": {
    "pre-commit": "lint-staged && ./tasks/changelog-changed-check.sh"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "prettier": {
    "semi": false
  }
}
